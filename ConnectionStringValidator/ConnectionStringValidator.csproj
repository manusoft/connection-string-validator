<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>check.ico</ApplicationIcon>
    <Title>Connection String Validator</Title>
    <Copyright>ManuHub</Copyright>
    <Company>Manojbabu</Company>
    <Description>Check connection strings</Description>
    <PackageIcon>check.ico</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="check.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\..\..\Desktop\check.ico">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SqlClient" Version="4.8.6" />
  </ItemGroup>

</Project>